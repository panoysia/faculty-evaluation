<% display_number = 0 %>
<h2 class="page-header">Students</h2>
<%= link_to 'New Student', new_admin_student_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Student Name</th>
      <th colspan="3"></th>      
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= student.full_name %></td>
        <td><%= link_to 'Show', [:admin, student] %></td>
        <td><%= link_to 'Edit', [:edit, :admin, student] %></td>
        <td><%= link_to 'Destroy', [:admin, student], method: :delete, data: { confirm: 'Are you sure?' } %></td>        
      </tr>
    <% end %>
  </tbody>
</table>