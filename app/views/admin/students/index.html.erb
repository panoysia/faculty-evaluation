<% display_number = 0 %>
<div class="row">
  <div class="col-md-12">
    <h2 class="page-header">
      <span>Students</span>
      <span class="pull-right">
        <%= link_to new_admin_student_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span> New
        <% end %>
      </span>
    </h2>
  </div>  <!-- .col-md-12 -->
</div> <!-- .row -->
<table class="table table-striped table-bordered content">
  <thead>
    <tr>
      <th>#</th>
      <th>Student Name</th>
      <th colspan="2">Actions</th>      
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= link_to student.full_name, admin_student_path(student) %></td>
        <td>
          <%= link_to edit_admin_student_path(student)   do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_student_path(student), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>