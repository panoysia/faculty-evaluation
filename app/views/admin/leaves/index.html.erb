<% display_number = 0 %>
<%= link_to 'New Leave', new_admin_leave_path, class: 'btn btn-primary' %>
<h3>Leaves</h3>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Employee</th>
      <th>Date Filed</th>
      <th>Start At</th>
      <th>End At</th>
      <th>Length<em> (# of days)</em></th>
      <!-- <th>Type</th> -->
    </tr>
  </thead>
  <tbody>
    <% @leaves.each do |leave| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%#= leave.employee %></td>
        <td><%= leave.filed_at %></td>
        <td><%= leave.start_at %></td>
        <td><%= leave.end_at %></td>
        <td><%= leave.length %></td>
        <td><%#= leave.type %></td>
      </tr>
    <% end %>
  </tbody>
</table>