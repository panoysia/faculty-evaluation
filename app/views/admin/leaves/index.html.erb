<% display_number = 0 %>
<div class="row">
  <div class="col-md-12">
    <h2 class="page-header">
      <span>Leaves</span>
      <span class="pull-right">
        <%= link_to new_admin_leave_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span> New
        <% end %>
      </span>
    </h2>
  </div>  <!-- .col-md-12 -->
</div>  <!-- .row -->
<table class="table table-striped table-bordered content">
  <thead>
    <tr>
      <th>#</th>
      <th>Employee</th>
      <th>Date Filed</th>
      <th>Start At</th>
      <th>End At</th>
      <th>Duration<em> (in days)</em></th>
      <!-- <th>Type</th> -->
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @leaves.each do |leave| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= leave.employee.full_name %></td>
        <td><%= leave.filed_at %></td>
        <td><%= leave.start_at %></td>
        <td><%= leave.end_at %></td>
        <td><%= leave.length %></td>
        <!-- <td><%#= leave.type %></td> -->
        <td>
          <%= link_to edit_admin_leave_path(leave)   do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_leave_path(leave), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>