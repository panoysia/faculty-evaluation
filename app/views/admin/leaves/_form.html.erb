<%= form_for([:admin, @leave]) do |f| %>
  <%= error_messages_for(@leave) %>

  <div class="form-group">
    <%= f.label 'Employee' %>
    <%= f.collection_select :employee_id, Employee.all, :id, :full_name, class: 'form-control' %>
  </div>    

  <div class="form-group">
    <%= f.label :filed_at %>
    <%= f.date_field :filed_at, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :start_at %>
    <%= f.date_field :start_at, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :end_at %>
    <%= f.date_field :end_at, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>