<div class="row">
  <div class="col-md-12">
    <h2 class="page-header">
      <span>Academic Years</span>
      <span class="pull-right">
        <%= link_to new_admin_academic_year_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span> New
        <% end %>
      </span>
    </h2>
  </div>  <!-- .col-md-12 -->
</div> <!-- .row -->
<table class="table table-bordered table-striped table-master content">
  <thead>
    <tr>
      <th>#</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @academic_years.each_with_index do |academic_year, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= date_format_readable(academic_year.start_at) %></td>
        <td><%= date_format_readable(academic_year.end_at) %></td>
        <td>
          <%= link_to admin_academic_year_path(academic_year), title: 'View', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-zoom-in"></span>
          <% end %>          
          <%= link_to edit_admin_academic_year_path(academic_year), title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_academic_year_path(academic_year), title: 'Delete', method: :delete, data: { toggle: 'tooltip', confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>