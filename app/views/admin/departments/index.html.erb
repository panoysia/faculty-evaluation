<div class="row">
  <div class="col-md-12">
    <h2 class="page-header">
      <span>Departments</span>
      <span class="pull-right">
        <%= link_to new_admin_department_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span> New
        <% end %>
      </span>
    </h2>
  </div>  <!-- .col-md-12 -->
</div> <!-- .row -->
<table class="table table-bordered table-striped table-master content">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each_with_index do |department, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= link_to department.name, admin_department_path(department), title: 'View', data: { toggle: 'tooltip' } %></td>
        <td>
          <%= link_to edit_admin_department_path(department), title: 'Edit', data: { toggle: 'tooltip'} do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_department_path(department), method: :delete,
                title: 'Delete',
                data: { toggle: 'tooltip', confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>