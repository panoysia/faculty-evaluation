<div class="row">
  <div class="col-md-12">
    <h2 class="page-header">
      <span>Career Paths</span>
      <span class="pull-right">
        <%= link_to new_admin_career_path_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span> New
        <% end %>
      </span>
    </h2>
  </div>  <!-- .col-md-12 -->
</div> <!-- .row -->
<table class="table table-bordered table-striped table-master content">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @career_paths.each_with_index do |career_path, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= link_to career_path.name, admin_career_path_path(career_path), title: 'View', data: { toggle: 'tooltip' } %></td>
        <td>
          <%= link_to edit_admin_career_path_path(career_path), title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_career_path_path(career_path), method: :delete, title: 'Delete', data: { confirm: 'Do you really want to delete this record?', toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>