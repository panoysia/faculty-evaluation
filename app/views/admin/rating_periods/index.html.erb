<% display_number = 0 %>
<div class="row">
  <div class="col-md-12">
    <h2 class="page-header">
      <span>Rating Periods</span>
      <span class="pull-right">
        <%= link_to new_admin_rating_period_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span> New
        <% end %>
      </span>
    </h2>
  </div>  <!-- .col-md-12 -->
</div> <!-- .row -->
<table id="table-master" class="table table-bordered table-striped content">
  <thead>
    <tr>
      <th>#</th>
      <th>Start</th>
      <th>End</th>
      <th>Semester</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @rating_periods.each do |rating_period| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= date_format_readable(rating_period.start_at) %></td>
        <td><%= date_format_readable(rating_period.end_at) %></td>
        <td><%= rating_period.semester.ordinalize %></td>
        <td>
          <%= link_to edit_admin_rating_period_path(rating_period)   do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_rating_period_path(rating_period), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>