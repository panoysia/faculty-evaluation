<%= form_for([:admin, @rating_period]) do |f| %>
  <% if @rating_period.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating_period.errors.count, "error") %> prohibited this rating_period from being saved:</h2>

      <ul>
      <% @rating_period.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <%= debug(@rating_period) %>
  <% end %>

  <div class="form-group">
    <%= f.label :start_at %>
    <%= f.number_field :start_at, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :end_at %>
    <%= f.number_field :end_at, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :semester %>
    <%= f.select :semester, 
      RatingPeriod::SEMESTERS.map { |key, value| [value, key] }, 
      class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, 
      RatingPeriod.statuses.keys.map { |key| [key.titleize, key] }, 
      class: 'form-control' %>
  </div>  
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>