<% display_number = 0 %>
<div class="row">
  <div class="col-md-12">
    <h2 class="page-header">
      <span>QCEs</span>
      <span class="pull-right">
        <%= link_to new_admin_qce_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span> New
        <% end %>
      </span>
    </h2>
  </div>  <!-- .col-md-12 -->
</div> <!-- .row -->
<table id="table-master" class="table table-bordered table-striped content">
  <thead>
    <tr>
      <th>#</th>
      <th>Faculty</th>
      <th>Rating Period</th>
      <th>Status</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= rating.employee.full_name %></td>
        <td><%= rating.rating_period.coverage %></td>
        <td>
          <span class="<%= rating.completed? ? 'label label-success' : 'label label-danger' %>">
            <%= rating.completed? ? 'Completed' : 'Incomplete' %>
          </span>
        </td>
        <td>
          <%= link_to edit_admin_qce_path(rating)   do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_qce_path(rating), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>