<%= form_for [:admin, @employee, @publication] do |f| %>
  <%= error_messages_for(@publication) %>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control',
            autofocus: true, required: true,
            maxlength: Employee::Publication.get_field_limit_of(:title) %>
      </div>      
    </div>
  </div>  
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :role, 'Role' %>
        <%= f.select :role,
              Employee::Publication.role_options, {},
              class: 'form-control' %>        
      </div>      
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :academic_level, 'Academic Level' %>
        <%= f.select :academic_level,
              Employee::Publication.academic_level_options, {},
              class: 'form-control' %>
      </div>      
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :publisher, 'Publisher' %>
        <%= f.text_field :publisher, class: 'form-control',
          required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :date_of_publication, 'Date of Publication' %>
        <%= f.date_field :date_of_publication, class: 'form-control',
          required: true %>
      </div>      
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control',
            rows: 3,
            maxlength: Employee::Publication.
                        get_field_limit_of(:description) %>
      </div>      
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>    
      </div>
    </div>
  </div>
<% end %>