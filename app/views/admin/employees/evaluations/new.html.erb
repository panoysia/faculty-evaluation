<div class="row">
  <div class="col-md-12">
    <%= link_to "Go to Faculty Evaluation",
      admin_search_employee_evaluations_path, class: 'btn btn-link' %>
    |&nbsp;&nbsp;
    <%= link_to "Evaluation List of #{@evaluation.employee_full_name}",
      admin_employee_evaluations_path(@evaluation.employee_id),
      class: 'btn btn-link' %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h2 class="page-header">
      <span><%= @evaluation %></span>
      <span class="pull-right label label-danger">
        <%#= @evaluation.status %>
        Unrecorded
      </span>
    </h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h4>From
      <!-- <span class="label label-info"><%#= @evaluation.rank_before %></span> -->
      <span class="label label-info">rank before</span>
      to
      <span class="label label-success">
        rank after
        <%#= @evaluation.rank_after %>
      </span>
    </h4>
  </div>
</div>

<div id="evaluation-summary">
  <div class="row">
    <div class="col-md-12">
      <h3 class="page-header alert alert-warning strong">
        <strong>Summary</strong>
      </h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">

      <div class="col-md-6">
        <table class="table table-striped table-bordered table-master">
          <thead>
            <tr>
              <th colspan="3">CCE</th>
            </tr>
            <tr>
              <th>Criteria</th>
              <th>Max</th>
              <th>Score</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Educational Qualification</td>
              <td class="center">85</td>
              <td class="text-right"><%#= @cce_record.total_educations_score %></td>
            </tr>
            <tr>
              <td>Experience and Length of Service</td>
              <td class="center">25</td>
              <td class="text-right"><%#= @cce_record.total_work_experiences_score %></td>
            </tr>
            <tr>
              <td>Professional Development, Achievement and Honors</td>
              <td class="center">90</td>
              <td class="text-right"><%#= @cce_record.total_achievements_score %></td>
            </tr>
          </tbody>
          <tfoot>
            <tr>
              <th class="text-right">Total</th>
              <th class="center">200</th>
              <th class="text-right"><%#= @cce_record.overall_score %></th>
            </tr>
          </tfoot>
        </table>
      </div>  <!-- div.col-md-6 -->

      <div class="col-md-6">
        <table class="table table-striped table-bordered table-master">
          <thead>
            <tr>
              <th colspan="4">QCE</th>
            </tr>
            <tr>
              <th>School Year</th>
              <th>1st Sem.</th>
              <th>2nd Sem.</th>
              <th>Rating</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>SY 1</td>
              <td class="text-right">40.00</td>
              <td class="text-right">40.00</td>
              <td class="text-right">80.00</td>
            </tr>  
            <tr>
              <td>SY 2</td>
              <td class="text-right">40.30</td>
              <td class="text-right">30.20</td>
              <td class="text-right">70.50</td>
            </tr>
            <tr>
              <td>SY 3</td>
              <td class="text-right">40.18</td>
              <td class="text-right">50.20</td>
              <td class="text-right">92.38</td>
            </tr>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="3" class="text-right">Total</th>
              <th class="text-right">100.00</th>
            </tr>
          </tfoot>
        </table>
      </div>  <!-- div.col-md-6 -->
      
    </div>  <!-- div.col-md-12 -->
  </div>  <!-- div.row -->

  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6">
        <table class="table table-striped table-bordered table-master">
          <thead>
            <tr>
              <th colspan="5">Ranking results</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>CCE</td>
              <td>QCE</td>
              <td>Score</td>
              <td>From</td>
              <td>To</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>  <!-- div#evaluation-summary -->

<div class="row">
  <div class="col-md-12">
    <h4 class="page-header alert alert-warning">QCE</h4>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h4 class="page-header alert alert-warning">CCE</h4>
  </div>
  <div class="col-md-12">
    <%#= @evaluation.cce_record.academic_work_experiences.to_sql %>
    <%= render "cce_record_for_new_evaluation",
                cce_record: @evaluation.cce_record %>
  </div>
</div>
