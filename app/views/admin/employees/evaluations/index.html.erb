<% provide(:content_id, 'id=evaluations-content') %>
<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>NBC</th>
      <th>CCE Score</th>
      <th>QCE Score</th>
      <th>Rank <em>(during evaluation)</em></th>
      <th>Updated Rank <em>(after evaluation)</em></th>
    </tr>
  </thead>
  <tbody>
    <% @evaluations.each_with_index do |evaluation, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= evaluation.nbc.name %></td>
        <td>cce</td>
        <td>qce</td>
        <td>rank</td>
        <td>updated rank</td>
      </tr>
    <% end %>
  </tbody>
</table>