<% provide(:content_id, 'id=civil-services-content') %>
<% display_number = 0 %>
<div>
  <%= link_to new_admin_employee_civil_service_eligibility_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span> New
  <% end %>
</div>
<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Career Service</th>
      <th>Rating</th>
      <th>Exam Date</th>
      <th>Place of Exam</th>
      <th>License #</th>
      <th>License Release Date</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @civil_services.each do |service| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= service.career_service %></td>
        <td><%= service.rating %></td>
        <td><%= service.date_of_exam %></td>
        <td><%= service.place_of_exam %></td>
        <td><%= service.license_number %></td>
        <td><%= service.date_release_of_license %></td>
        <td>
          <%= link_to edit_admin_employee_civil_service_eligibility_path(@employee, service)   do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_civil_service_eligibility_path(@employee, service), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>