<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Patent No.</th>
      <th>Year Patented</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.inventions.each_with_index do |invention, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= invention.name %></td>
        <td><%= invention.patent_no %></td>
        <td><%= invention.year_patented %></td>
        <td><%= invention.description %></td>
        <td>
          <%= link_to edit_admin_employee_invention_path(
                        @employee,invention
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_invention_path(
                        @employee, invention
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>