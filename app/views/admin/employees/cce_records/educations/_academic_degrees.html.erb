<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th colspan="10">Academic Degrees</th>
    </tr>
    <tr>
      <th>#</th>
      <th>Degree</th>
      <th>Type</th>
      <th>Institution</th>
      <th>Start</th>
      <th>End</th>
      <th>Graduated</th>
      <th>Points</th>
      <th>NBC</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% academic_degrees.includes(:cce_scoring).each_with_index do |degree, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= degree.degree %></td>
        <td><%= degree.degree_type_to_string %></td>
        <td><%= degree.institution %></td>
        <td><%= date_format_readable(degree.start_at) %></td>
        <td><%= date_format_readable(degree.end_at) %></td>
        <td><%= date_format_readable(degree.graduated_at) if degree.graduated_at.present?  %></td>
        <td class="text-right"><%= degree.cce_scoring.points %></td>
        <td>
          <%= link_to degree.cce_scoring.nbc_name,
                admin_nbc_path(degree.cce_scoring.nbc_id) %>
        </td>
        <td>
          <%= link_to edit_admin_employee_academic_degree_path(
                        employee, degree
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_academic_degree_path(
                        employee, degree
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>