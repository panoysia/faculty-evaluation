<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Degree</th>
      <th>Institution</th>
      <th># of units</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.additional_credits.each_with_index do |credit, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= credit.degree %></td>
        <td><%= credit.institution %></td>
        <td><%= credit.no_of_units %></td>
        <td>
          <%= link_to edit_admin_employee_additional_credit_path(
                        @employee, credit
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_additional_credit_path(
                        @employee, credit
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>