<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th colspan="8">Awards</th>
    </tr>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Level</th>
      <th>Date Awarded</th>
      <th>Description</th>
      <th>Points</th>
      <th>NBC</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% achievements.includes(:cce_scoring).each_with_index do |award, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= award.name %></td>
        <td><%= award.level_to_string %></td>
        <td><%= date_format_readable(award.date_awarded) %></td>
        <td><%= award.description %></td>
        <td class="text-right"><%= award.cce_scoring.points %></td>
        <td><%= award.cce_scoring.nbc_id %></td>
        <td>
          <%= link_to edit_admin_employee_award_path(employee, award), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_award_path(employee, award),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>