<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th colspan="8">Instructional Manuals</th>
    </tr>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Category</th>
      <th>Published At</th>
      <th>Description</th>
      <th>Points</th>
      <th>NBC</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% achievements.includes(cce_scoring: :nbc).
          each_with_index do |manual, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= manual.name %></td>
        <td><%= manual.category_to_string %></td>
        <td><%= date_format_readable(manual.published_at) %></td>
        <td><%= manual.description %></td>
        <td class="text-right"><%= manual.cce_scoring.points %></td>
        <td>
          <%= link_to manual.cce_scoring.nbc_name,
                admin_nbc_path(manual.cce_scoring.nbc_id) %>
        </td>        
        <td>
          <%= link_to edit_admin_employee_instructional_manual_path(
                        employee, manual
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_instructional_manual_path(
                        employee, manual
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>    
  </tbody>
</table>