<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th colspan="8">Instructional Manuals</th>
    </tr>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Category</th>
      <th>Published At</th>
      <th>Description</th>
      <th>Points</th>
      <th>NBC</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% achievements.includes(cce_scoring: :nbc).
          each_with_index do |manual, index| %>
      <tr <%= "class=info" unless manual.cce_scoring.recorded? %>>
        <td><%= index += 1 %></td>
        <td><%= manual.name %></td>
        <td><%= manual.category_to_string %></td>
        <td><%= date_format_readable(manual.published_at) %></td>
        <td><%= manual.description %></td>
        <td class="text-right"><%= manual.cce_scoring.points %></td>
        <td><%= render "nbc_link", record: manual.cce_scoring %></td>
        <td>
          <%= render("action_links", record: manual, employee: employee) unless manual.cce_scoring.recorded? %>
        </td>
      </tr>
    <% end %>    
  </tbody>
</table>