<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th colspan="8">Assessor Services</th>
    </tr>    
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Agency</th>
      <th>Start</th>
      <th>End</th>
      <th>Points</th>
      <th>NBC</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% achievements.includes(:cce_scoring).each_with_index do |service, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= service.name %></td>
        <td><%= service.agency %></td>
        <td><%= date_format_readable(service.start_at) %></td>
        <td><%= date_format_readable(service.end_at) if service.end_at.present? %></td>
        <td class="text-right"><%= service.cce_scoring.points %></td>
        <td>
          <%= link_to service.cce_scoring.nbc_name,
                admin_nbc_path(service.cce_scoring.nbc_id) %>
        </td>        
        <td>
          <%= link_to edit_admin_employee_assessor_service_path(
                        employee, service
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_assessor_service_path(
                        employee, service
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>