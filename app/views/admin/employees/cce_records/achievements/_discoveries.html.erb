<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th colspan="8">Discoveries</th>
    </tr>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Patent No.</th>
      <th>Year Patented</th>
      <th>Description</th>
      <th>Points</th>
      <th>NBC</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% achievements.includes(cce_scoring: :nbc).
          each_with_index do |discovery, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= discovery.name %></td>
        <td><%= discovery.patent_no %></td>
        <td><%= discovery.year_patented %></td>
        <td><%= discovery.description %></td>
        <td class="text-right"><%= discovery.cce_scoring.points %></td>
        <td>
          <%= link_to discovery.cce_scoring.nbc_name,
                admin_nbc_path(discovery.cce_scoring.nbc_id) %>
        </td>        
        <td>
          <%= link_to edit_admin_employee_discovery_path(
                        employee, discovery
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_discovery_path(
                        employee, discovery
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>