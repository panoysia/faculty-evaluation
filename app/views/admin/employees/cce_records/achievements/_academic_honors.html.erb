<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th colspan="9">Academic Honors</th>
    </tr>    
    <tr>
      <th>#</th>  
      <th>Award</th>
      <th>Degree</th>
      <th>Honor</th>
      <th>School/Agency</th>
      <th>Date Awarded</th>
      <th>Points</th>
      <th>NBC</th>      
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% achievements.includes(:cce_scoring).each_with_index do |academic_honor, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= academic_honor.award %></td>
        <td><%= academic_honor.degree_type_to_string %></td>
        <td><%= academic_honor.honor_type_to_string %></td>
        <td><%= academic_honor.school %></td>
        <td><%= date_format_readable(academic_honor.date_awarded) %></td>
        <td class="text-right"><%= academic_honor.cce_scoring.points %></td>
        <td><%= academic_honor.cce_scoring.nbc_id %></td>
        <td>
          <%= link_to edit_admin_employee_academic_honor_path(
                        employee, academic_honor
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_academic_honor_path(
                        employee, academic_honor
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>