<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th colspan="9">Accreditation Services</th>
    </tr>    
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Agency</th>
      <th>Participation</th>
      <th>Start</th>
      <th>End</th>
      <th>Points</th>
      <th>NBC</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% achievements.includes(cce_scoring: :nbc).
          each_with_index do |service, index| %>
      <tr <%= "class=info" unless service.cce_scoring.recorded? %>>
        <td><%= index += 1 %></td>
        <td><%= service.name %></td>
        <td><%= service.agency %></td>
        <td><%= service.participation %></td>
        <td><%= date_format_readable(service.start_at) %></td>
        <td><%= date_format_readable(service.end_at) if service.end_at.present? %></td>
        <td class="text-right"><%= service.cce_scoring.points %></td>
        <td><%= render "nbc_link", record: service.cce_scoring %></td>
        <td>
          <%= render("action_links", record: service, employee: employee) unless service.cce_scoring.recorded? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>