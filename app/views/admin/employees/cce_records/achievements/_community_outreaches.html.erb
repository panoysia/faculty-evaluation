<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th colspan="9">Community Outreaches</th>
    </tr>
    <tr>
      <th>#</th>
      <th>Project Name</th>
      <th>Participation</th>
      <th>Sponsoring Agency</th>
      <th>Start</th>
      <th>End</th>
      <th>Points</th>
      <th>NBC</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% achievements.includes(:cce_scoring).each_with_index do |outreach, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= outreach.project_name %></td>
        <td><%= outreach.participation %></td>
        <td><%= outreach.sponsoring_agency %></td>
        <td><%= date_format_readable(outreach.start_at) %></td>
        <td><%= date_format_readable(outreach.end_at) %></td>
        <td class="text-right"><%= outreach.cce_scoring.points %></td>
        <td>
          <%= link_to outreach.cce_scoring.nbc_name,
                admin_nbc_path(outreach.cce_scoring.nbc_id) %>
        </td>        
        <td>
          <%= link_to edit_admin_employee_community_outreach_path(
                        employee, outreach
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_community_outreach_path(
                        employee, outreach
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>