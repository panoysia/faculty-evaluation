<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th colspan="8">Professional Memberships</th>
    </tr>
    <tr>
      <th>#</th>
      <th>Organization</th>
      <th>Date of Membership</th>
      <th>Type</th>
      <th>Membership</th>
      <th>Points</th>
      <th>NBC</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% achievements.includes(:cce_scoring).each_with_index do |membership, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= membership.organization %></td>
        <td><%= date_format_readable(membership.date_of_membership) %></td>
        <td><%= membership.organization_type_to_string %></td>
        <td><%= membership.membership_type_to_string %></td>
        <td class="text-right"><%= membership.cce_scoring.points %></td>
        <td><%= membership.cce_scoring.nbc_id %></td>
        <td>
          <%= link_to edit_admin_employee_professional_membership_path(
                        employee, membership
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_professional_membership_path(
                        employee, membership
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>