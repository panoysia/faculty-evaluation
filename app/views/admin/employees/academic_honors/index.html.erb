<% provide(:content_id, 'id=academic-honors-content') %>
<div>
  <%= link_to new_admin_employee_academic_honor_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span> New
  <% end %>
</div>
<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Award</th>
      <th>Degree</th>
      <th>Honor</th>
      <th>School/Agency</th>
      <th>Date Awarded</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @academic_honors.each_with_index do |academic_honor, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= academic_honor.award %></td>
        <td><%= academic_honor.degree_type_to_string %></td>
        <td><%= academic_honor.honor_type_to_string %></td>
        <td><%= academic_honor.school %></td>
        <td><%= academic_honor.date_awarded %></td>
        <td>
          <%= link_to edit_admin_employee_academic_honor_path(@employee, academic_honor) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_academic_honor_path(@employee, academic_honor), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>