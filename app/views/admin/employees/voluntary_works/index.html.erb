<% provide(:content_id, 'id=voluntary-works-content') %>
<% display_number = 0 %>
<div>
  <%= link_to new_admin_employee_voluntary_work_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span> New
  <% end %>
</div>
<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Organization</th>
      <th>Position</th>
      <th>No. of hours</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @voluntary_works.each do |work| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= work.organization %></td>
        <td><%= work.position %></td>
        <td><%= work.no_of_hours %></td>
        <td><%= work.start_at %></td>
        <td><%= work.end_at %></td>
        <td>
          <%= link_to edit_admin_employee_voluntary_work_path(@employee, work)   do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_voluntary_work_path(@employee, work), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>