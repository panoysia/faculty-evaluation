<% provide(:content_id, 'id=educations-content') %>
<% display_number = 0 %>
<div>
  <%= link_to new_admin_employee_education_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span> New
  <% end %>
</div>
<table id="table-master" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>  
      <th>School</th>
      <th>Degree/Course</th>
      <th>Level</th>
      <th>Start</th>
      <th>End</th>
      <th>Recent</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= education.school_name %></td>
        <td><%= link_to education.degree_course, admin_employee_education_path(@employee, education) %></td>
        <td><%= education_level_to_string(education.level) %></td>
        <td><%= education.start_at %></td>
        <td><%= education.end_at %></td>
        <td><%= education.is_recent %></td>
        <td>
          <%= link_to edit_admin_employee_education_path(@employee, education)   do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_education_path(@employee, education), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
