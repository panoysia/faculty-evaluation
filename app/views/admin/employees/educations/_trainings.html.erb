<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Level</th>
      <th>Category</th>
      <th>Start</th>
      <th>End</th>
      <th>Conducted by</th>
      <th>Participation</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.trainings.each_with_index do |training, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= training.title %></td>
        <td><%= training.level_to_string %></td>
        <td><%= training.category_to_string %></td>
        <td><%= date_format_readable(training.start_at) %></td>
        <td><%= date_format_readable(training.end_at) %></td>
        <td><%= training.conducted_by %></td>
        <td><%= training.nature_of_participation %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: training, employee: training.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>