<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Degree</th>
      <th>Type</th>
      <th>Institution</th>
      <th># of units</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.additional_credits.each_with_index do |credit, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= credit.degree %></td>
        <td><%= credit.degree_type_to_string %></td>
        <td><%= credit.institution %></td>
        <td><%= credit.no_of_units %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: credit, employee: credit.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>