<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Degree</th>
      <th>Type</th>
      <th>Institution</th>
      <th>Start</th>
      <th>End</th>
      <th>Graduated</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.academic_degrees.each_with_index do |degree, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= degree.degree %></td>
        <td><%= degree.degree_type_to_string %></td>
        <td><%= degree.institution %></td>
        <td><%= date_format_readable(degree.start_at) %></td>
        <td><%= date_format_readable(degree.end_at) %></td>
        <td><%= date_format_readable(degree.graduated_at) if degree.graduated_at.present?  %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: degree, employee: degree.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>