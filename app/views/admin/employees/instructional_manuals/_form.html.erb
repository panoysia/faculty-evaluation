<%= form_for [:admin, @employee, @instructional_manual] do |f| %>
  <%= error_messages_for(@instructional_manual) %>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control',
            autofocus: true, required: true,
            maxlength: Employee::InstructionalManual.get_field_limit_of(:name) %>
      </div>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :category %>
        <%= f.select :category,
              Employee::InstructionalManual.category_options, {},
              class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :published_at %>
        <%= f.date_field :published_at, class: 'form-control',
              required: true %>
      </div>      
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control',
            rows: 3,
            maxlength: Employee::InstructionalManual.
                        get_field_limit_of(:description) %>
      </div>      
    </div>
  </div>    
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>    
      </div>
    </div>
  </div>
<% end %>