<%= form_for [:admin, @employee, @advisory] do |f| %>
  <%= error_messages_for(@advisory) %>

  <%= hidden_field_tag :redirect, params[:redirect] %>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :title, 'Title of Paper' %>
        <%= f.text_field :title, class: 'form-control',
            autofocus: true, required: true,
            maxlength: Employee::AcademicAdvisory.get_field_limit_of(:title)
        %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :nature, 'Nature' %>
        <%= f.select :nature,
                    Employee::AcademicAdvisory.nature_options, {},
                    class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :start_at, 'Start At' %>
        <%= f.date_field :start_at, class: 'form-control',
              required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :end_at, 'End At' %>
        <%= f.date_field :end_at, class: 'form-control',
              required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>