<%= form_for [:admin, @employee, @review] do |f| %>
  <%= error_messages_for(@review) %>

  <%= hidden_field_tag :redirect, params[:redirect] %>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control',
            autofocus: true, required: true,
            maxlength: Employee::ProfessionalReview.get_field_limit_of(:name)
        %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :review_type, 'Type' %>
        <%= f.select :review_type,
                    Employee::ProfessionalReview.review_type_options, {},
                    class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :occurred_at, 'Occurred At' %>
        <%= f.date_field :occurred_at, class: 'form-control',
              required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>