<% provide(:content_id, 'id=trainings-content') %>
<div>
  <%= link_to new_admin_employee_training_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span> New
  <% end %>
</div>
<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th>Level</th>
      <th>Conducted by</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @trainings.each_with_index do |training, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= training.title %></td>
        <td><%= training.start_at %></td>
        <td><%= training.end_at %></td>
        <td><%= training_level_to_string(training.level) %></td>
        <td><%= training.conducted_by %></td>
        <td>
          <%= link_to edit_admin_employee_training_path(@employee, training) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_training_path(@employee, training), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>