<div id="profile-content" class="row">
  <%= form_for [:admin, @employee], html: { multipart: true } do |f| %>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :last_name, 'Last Name', class: 'control-label' %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :middle_name, 'Middle Name', class: 'control-label' %>
        <%= f.text_field :middle_name, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :last_name, class: 'control-label' %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name_extension, 'Name Extension', class: 'control-label' %>
        <%= f.text_field :name_extension, class: 'form-control' %>
        <span class="help-block"><em>(7 chars max)</em></span>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :birth_date, 'Date of Birth', class: 'control-label' %>
        <%= f.date_field :birth_date, class: 'form-control' %>
      </div>      
    </div>  
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :gender, 'Gender', class: 'control-label' %>
        <%= f.select :gender, Employee.display_gender_types, {}, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :civil_status, 'Civil Status', class: 'control-label' %>
        <%= f.select :civil_status, Employee::CIVIL_STATUS_TYPES, {}, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :citizenship, class: 'control-label' %>
        <%= f.text_field :citizenship, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :height, class: 'control-label' %>
        <%= f.text_field :height, class: 'form-control' %>
      </div>      
    </div>
   <div class="col-md-6">
      <div class="form-group">
        <%= f.label :weight, class: 'control-label' %>
        <%= f.text_field :weight, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <!-- must be a 'select' field -->
        <%= f.label :blood_type, 'Blood Type', class: 'control-label' %>
        <%#= f.text_field :blood_type, class: 'form-control' %>
      </div>      
    </div>  
    <div class="col-md-6">
      <div class="form-group">
        <!-- must be an 'email' field -->
        <%= f.label :email_address, 'Email Address', class: 'control-label' %>
        <%= f.text_field :email_address, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :cellphone_no, 'Cellphone #', class: 'control-label' %>
        <%= f.text_field :cellphone_no, class: 'form-control' %>
      </div>      
    </div>  
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :gsis_no, 'GSIS #', class: 'control-label' %>
        <%= f.text_field :gsis_no, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :pagibig_no, 'PAG-IBIG #', class: 'control-label' %>
        <%= f.text_field :pagibig_no, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :philhealth_no, 'PhilHealth #',class: 'control-label' %>
        <%= f.text_field :philhealth_no, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :sss_no, 'SSS #', class: 'control-label' %>
        <%= f.text_field :sss_no, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :agency_employee_no, 'Agency Employee #', class: 'control-label' %>
        <%= f.text_field :agency_employee_no, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :tin, 'TIN', class: 'control-label' %>
        <%= f.text_field :tin, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :r_address, 'Residential Address', class: 'control-label' %>
        <%= f.text_field :r_address, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :r_zip_code, 'Residential Zip Code', class: 'control-label' %>
        <%= f.text_field :r_zip_code, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :r_telephone_no, 'Residential Tel. #', class: 'control-label' %>
        <%= f.text_field :r_telephone_no, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :p_address, 'Permanent Address', class: 'control-label' %>
        <%= f.text_field :p_address, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :p_zip_code, 'Permanent Zip Code', class: 'control-label' %>
        <%= f.text_field :p_zip_code, class: 'form-control' %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :p_telephone_no, 'Permanent Tel. #', class: 'control-label' %>
        <%= f.text_field :p_telephone_no, class: 'form-control' %>
      </div>      
    </div>

  <% end # end of form_for %>
</div>  <!-- id="profile-content" -->