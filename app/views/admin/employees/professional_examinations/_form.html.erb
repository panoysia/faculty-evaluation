<%= form_for [:admin, @employee, @examination] do |f| %>
  <%= error_messages_for(@examination) %>  
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control',
              autofocus: true, required: true,
              maxlength: Employee::ProfessionalExamination.get_field_limit_of(:title) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :category, 'Category' %>
        <%= f.select :category,
              Employee::ProfessionalExamination.category_options,
              {}, class: 'form-control' %>
      </div>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :agency_name, 'Agency Name' %>
        <%= f.text_field :agency_name, class: 'form-control',
              required: true,
              maxlength: Employee::ProfessionalExamination.get_field_limit_of(:agency_name) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :date_passed, 'Start Date' %>
        <%= f.date_field :date_passed, class: 'form-control',
            required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>    
      </div>
    </div>
  </div>  
<% end %>