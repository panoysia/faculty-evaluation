<% display_number = 0 %>
<h2 class="page-header">Employees</h2>
<%= link_to 'New Employee', new_admin_employee_path, class: 'btn btn-primary' %>
<!-- puts some gap here -->
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= link_to 'Show', [:admin, employee] %></td>
        <td><%= link_to 'Edit', [:edit, :admin, employee] %></td>
        <td><%= link_to 'Delete', [:admin, employee], method: :delete, data: { confirm: 'Are you sure?' } %></td>  
      </tr>
    <% end %>
  </tbody>
</table>