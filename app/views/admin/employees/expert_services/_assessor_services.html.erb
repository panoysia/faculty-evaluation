<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Agency</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.assessor_services.each_with_index do |service, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= service.name %></td>
        <td><%= service.agency %></td>
        <td><%= date_format_readable(service.start_at) %></td>
        <td><%= date_format_readable(service.end_at) if service.end_at.present? %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: service, employee: service.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>