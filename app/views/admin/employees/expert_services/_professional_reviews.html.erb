<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Type</th>
      <th>Occurred At</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.professional_reviews.each_with_index do |review, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= review.name %></td>
        <td><%= review.review_type_to_string %></td>
        <td><%= date_format_readable(review.occurred_at) %></td>
        <td>
          <%= link_to edit_admin_employee_professional_review_path(
                        @employee, review
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_professional_review_path(
                        @employee, review
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>