<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Type</th>
      <th>Occurred At</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.professional_reviews.each_with_index do |review, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= review.name %></td>
        <td><%= review.review_type_to_string %></td>
        <td><%= date_format_readable(review.occurred_at) %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: review, employee: review.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>