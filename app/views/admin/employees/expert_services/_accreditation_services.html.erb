<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Agency</th>
      <th>Participation</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.accreditation_services.each_with_index do |service, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= service.name %></td>
        <td><%= service.agency %></td>
        <td><%= service.participation %></td>
        <td><%= date_format_readable(service.start_at) %></td>
        <td><%= date_format_readable(service.end_at) if service.end_at.present? %></td>
        <td>
          <%= link_to edit_admin_employee_accreditation_service_path(
                        @employee, service
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_accreditation_service_path(
                        @employee, service
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>