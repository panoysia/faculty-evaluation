<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Name</th>
      <th>Competitiveness</th>
      <th>Patent No.</th>
      <th>Year Patented</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.creative_works.each_with_index do |creative_work, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= creative_work.name %></td>
        <td><%= creative_work.competitiveness_to_string %></td>
        <td><%= creative_work.patent_no %></td>
        <td><%= creative_work.year_patented %></td>
        <td><%= creative_work.description %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: creative_work,
                        employee: creative_work.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>