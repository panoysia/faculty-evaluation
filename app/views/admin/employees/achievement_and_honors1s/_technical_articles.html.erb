<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Name</th>
      <th>Level</th>
      <th>Published At</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.technical_articles.each_with_index do |technical_article, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= technical_article.name %></td>
        <td><%= technical_article.level_to_string %></td>
        <td><%= date_format_readable(technical_article.published_at) %></td>
        <td><%= technical_article.description %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: technical_article,
                        employee: technical_article.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>