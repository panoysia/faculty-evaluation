<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Patent No.</th>
      <th>Patent Type</th>
      <th>Year Patented</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.inventions.each_with_index do |invention, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= invention.name %></td>
        <td><%= invention.patent_no %></td>
        <td><%= invention.patent_type_to_string %></td>
        <td><%= invention.year_patented %></td>
        <td><%= invention.description %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: invention, employee: invention.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>