<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Title</th>
      <th>Role</th>
      <th>Academic Level</th>
      <th>Publisher</th>
      <th>Date of Publication</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.publications.each_with_index do |publication, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= publication.title %></td>
        <td><%= publication.role_to_string %></td>
        <td><%= publication.academic_level_to_string %></td>
        <td><%= publication.publisher %></td>
        <td><%= date_format_readable(publication.date_of_publication) %></td>
        <td><%= publication.description %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: publication,
                        employee: publication.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>