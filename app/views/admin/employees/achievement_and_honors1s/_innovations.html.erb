<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Patent No.</th>
      <th>Year Patented</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.innovations.each_with_index do |innovation, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= innovation.name %></td>
        <td><%= innovation.patent_no %></td>
        <td><%= innovation.year_patented %></td>
        <td><%= innovation.description %></td>
        <td>
          <%= link_to edit_admin_employee_innovation_path(
                        @employee, innovation
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_innovation_path(
                        @employee, innovation
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>    
  </tbody>
</table>