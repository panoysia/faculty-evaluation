<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Competitiveness</th>
      <th>Patent No.</th>
      <th>Year Patented</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.innovations.each_with_index do |innovation, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= innovation.name %></td>
        <td><%= innovation.competitiveness_to_string %></td>
        <td><%= innovation.patent_no %></td>
        <td><%= innovation.year_patented %></td>
        <td><%= innovation.description %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: innovation, employee: innovation.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>