<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Name</th>
      <th>Category</th>
      <th>Published At</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.instructional_manuals.each_with_index do |manual, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= manual.name %></td>
        <td><%= manual.category_to_string %></td>
        <td><%= date_format_readable(manual.published_at) %></td>
        <td><%= manual.description %></td>
        <td>
          <%= link_to edit_admin_employee_instructional_manual_path(
                        @employee, manual
                        ), 
                title: 'Edit', data: { toggle: 'tooltip' } do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_instructional_manual_path(
                        @employee, manual
                        ),
                method: :delete, title: 'Delete',
                data: { toggle: 'tooltip', 
                        confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>    
  </tbody>
</table>