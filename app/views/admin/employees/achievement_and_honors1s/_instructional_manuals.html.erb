<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Name</th>
      <th>Category</th>
      <th>Published At</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.instructional_manuals.each_with_index do |manual, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= manual.name %></td>
        <td><%= manual.category_to_string %></td>
        <td><%= date_format_readable(manual.published_at) %></td>
        <td><%= manual.description %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: manual, employee: manual.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>