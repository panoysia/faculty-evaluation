<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Patent No.</th>
      <th>Year Patented</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.discoveries.each_with_index do |discovery, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= discovery.name %></td>
        <td><%= discovery.patent_no %></td>
        <td><%= discovery.year_patented %></td>
        <td><%= discovery.description %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: discovery, employee: discovery.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>