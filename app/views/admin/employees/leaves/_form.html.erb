<%= form_for([:admin, @employee, @leave]) do |f| %>
  <%= error_messages_for(@leave) %>
  
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :academic_year_id, "Academic Year" %>
        <%= f.collection_select :academic_year_id,
              AcademicYear.display_all, :id, :coverage_with_details, {},
              { class: "form-control",
                autofocus: true, required: true } %>
      </div>
    </div>
  </div>  <!-- .row -->
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :filed_at %>
        <%= f.date_field :filed_at, class: "form-control",
                          required: true %>
      </div>
    </div>
  </div>  <!-- .row -->
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :start_at %>
        <%= f.date_field :start_at, class: "form-control",
                                    required: true %>
      </div>
    </div>
  </div>  <!-- .row -->
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :end_at %>
        <%= f.date_field :end_at, class: "form-control",
                                  required: true %>
      </div>
    </div>
  </div>  <!-- .row -->
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>