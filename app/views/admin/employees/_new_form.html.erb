<%= form_for([:admin, @employee]) do |f| %>
  <%= error_messages_for(@employee) %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :first_name, 'First Name' %>
        <%= f.text_field :first_name, class: 'form-control', autofocus: true, maxlength: Employee.get_field_limit_of(:first_name) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :last_name, 'Last Name' %>
        <%= f.text_field :last_name, class: 'form-control', maxlength: Employee.get_field_limit_of(:last_name) %>
      </div>
    </div>
  </div>
  
  <!-- User Account form builder (user_account_fb) -->
  <%= f.fields_for :user_account do |user_account_fb| %>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= user_account_fb.label :username %>
          <%= user_account_fb.text_field :username, class: 'form-control', maxlength: User::USERNAME_MAX_LENGTH %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= user_account_fb.label :password %>
          <%= user_account_fb.password_field :password, class: 'form-control', maxlength: User::PASSWORD_MAX_LENGTH %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.submit 'Create Faculty', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>