<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Name</th>
      <th>Level</th>
      <th>Date Awarded</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.awards.each_with_index do |award, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= award.name %></td>
        <td><%= award.level_to_string %></td>
        <td><%= award.date_awarded %></td>
        <td><%= award.description %></td>
        <td>
          <%= link_to edit_admin_employee_award_path(@employee, award) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_award_path(@employee, award), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>