<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Name</th>
      <th>Level</th>
      <th>Date Awarded</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.awards.each_with_index do |award, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= award.name %></td>
        <td><%= award.level_to_string %></td>
        <td><%= date_format_readable(award.date_awarded) %></td>
        <td><%= award.description %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: award, employee: award.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>