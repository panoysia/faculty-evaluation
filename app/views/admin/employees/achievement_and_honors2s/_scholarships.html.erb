<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Title</th>
      <th>Sponsoring Agency</th>
      <th>Date Granted</th>
      <th>Scholarship</th>
      <th>Degree</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employee.scholarships.each_with_index do |scholarship, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= scholarship.title %></td>
        <td><%= scholarship.sponsoring_agency %></td>
        <td><%= date_format_readable(scholarship.date_granted) %></td>
        <td><%= scholarship.scholarship_type_to_string %></td>
        <td><%= scholarship.degree_type_to_string %></td>
        <td>
          <%= render "admin/employees/action_links",
                        record: scholarship, employee: scholarship.employee %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>