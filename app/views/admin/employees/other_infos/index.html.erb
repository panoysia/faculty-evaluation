<div id="educations-content" class="row">
  <h4 class="page-header">List of Other Infos</h4>
</div>
<% display_number = 0 %>
<table class="table">
  <thead>
    <tr>
      <th>#</th>  
      <th>Context</th>
      <th>Info</th>
    </tr>
  </thead>
  <tbody>
    <% @other_infos.each do |other_info| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= other_info.context %></td>
        <td><%= other_info.info %></td>
      </tr>
    <% end %>
  </tbody>
</table>