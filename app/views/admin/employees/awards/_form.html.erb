<%= form_for [:admin, @employee, @award] do |f| %>
  <%= error_messages_for(@award) %>  
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control',
              autofocus: true, required: true,
              maxlength: Employee::Award.get_field_limit_of(:name) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :level, 'Level' %>
        <%= f.select :level,
              Employee::Award.level_options,
              {}, class: 'form-control' %>
      </div>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :date_awarded, 'Date Awarded' %>
        <%= f.date_field :date_awarded, class: 'form-control',
            required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control',
            rows: 3,
            maxlength: Employee::Award.get_field_limit_of(:description) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>