<% provide(:content_id, 'id=community-outreaches-content') %>
<div>
  <%= link_to new_admin_employee_community_outreach_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span> New
  <% end %>
</div>
<table class="table table-striped table-bordered table-master">
  <thead>
    <tr>
      <th>#</th>  
      <th>Project Name</th>
      <th>Sponsoring Agency</th>
      <th>Start At</th>
      <th>End At</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @outreaches.each_with_index do |outreach, index| %>
      <tr>
        <td><%= index += 1 %></td>
        <td><%= outreach.project_name %></td>
        <td><%= outreach.sponsoring_agency %></td>
        <td><%= outreach.start_at %></td>
        <td><%= outreach.end_at %></td>
        <td>
          <%= link_to edit_admin_employee_community_outreach_path(@employee, outreach) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to admin_employee_community_outreach_path(@employee, outreach), method: :delete, data: { confirm: 'Do you really want to delete this record?' } do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>