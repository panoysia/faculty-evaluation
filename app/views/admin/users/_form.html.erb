<%= form_for([:admin, @user]) do |f| %>
  <%= error_messages_for(@user) %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label 'Password' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>    
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>