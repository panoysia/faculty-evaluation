<!-- Rating Guide -->
<style>
 #row-action {
    /*border-collapse: collapse;
    background-color: green;*/
  }

  #instruction-guide {
    margin-top: 20px;
  }
</style>
<div id="rating-info" class="center">
  <p>Instrument for Instruction/Teaching Effectiveness</p>
  <p>Rating Period _____ to _____ </p>
  <p>Name of Faculty _____</p>
  <p>Academic Rank _____</p>
  <p>Evaluator _____</p>
</div>
<div id="instruction-guide">
  <p class="center"><strong>Instruction: Please evaluate the faculty using the scale below. Encircle your rating.</strong></p>
  <table class="table table-bordered table-master" style="margin: 20px auto;">
    <thead>
      <tr>
        <th>Scale</th>
        <th>Descriptive Rating</th>
        <th>Qualitative Description</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="center">5</td>
        <td class="center">Outstanding</td>
        <td>The performance almost always exceeds the job requirements.<br>The Faculty is an exceptional role model.</td>
      </tr>
      <tr>
        <td class="center">4</td>
        <td class="center">Very Satisfactory</td>
        <td>The performance meets and often exceeds the job requirements.</td>
      </tr>
      <tr>
        <td class="center">3</td>
        <td class="center">Satisfactory</td>
        <td>The performance meets job requirements</td>
      </tr>
      <tr>
        <td class="center">2</td>
        <td class="center">Fair</td>
        <td>The performance needs some development to meet job requirements.</td>
      </tr>
      <tr>
        <td class="center">1</td>
        <td class="center">Poor</td>
        <td>The faculty fails to meet job requirements</td>
      </tr>
    </tbody>
  </table>
</div>
<%= form_tag qce_rating_path, method: :patch do %>
  <table class="table table-bordered">
    <tbody>
    <%#= f.fields_for :user_account do |user_account_fb| %>
    <% @rating.evaluations.includes(:question).each do |evaluation| %>
      <tr>
        <td class="question"><%= evaluation.question.question %></td>
        <% 1.upto(5) do |number| %>
          <% name = "evaluations[#{evaluation.id}][score]" %>
          <% checked = (evaluation.score == number) %>
          <td>
            <%= label name, number %>
            <%= radio_button_tag name, number, checked %>
          </td>
        <% end %>
      </tr>
    <% end %>

    <% if false %>

      <% @rating.evaluations.each do |evaluation| %>
        <%= fields_for 'evaluation[]', evaluation do |evaluation_form| %>
          <tr>
            <td class="question"><%= evaluation.question.question %></td>
            <td>
            <%= evaluation_form.collection_radio_buttons :score, (1..5).to_a, :to_s, :to_s %>
              <!-- <td><%#= r.radio_button %></td> -->
            <%# end %>
            </td>
          </tr>
        <% end %>
      <% end %>

    <% @rating.evaluations.each do |evaluation| %>
      <tr>
        <td class="question"><%= evaluation.question.question %></td>
        <td>
          
        </td>
        <td>
          <%= label_tag 5 %>
          <%= radio_button_tag 'scores[]', 5, checked: true %>
        </td>
        <td>
          <%= label_tag 4 %>
          <%= radio_button_tag "scores[]", 4 %>
        </td>
        <td>
          <%= label_tag 3 %>
          <%= radio_button_tag 'scores[]', 3 %>
        </td>
        <td>
          <%= label_tag 2 %>
          <%= radio_button_tag 'scores[]', 2 %>
        </td>
        <td>
          <%= label_tag 1 %>
          <%= radio_button_tag 'scores[]', 1 %>
        </td>
        <!-- <td><%#= evaluation.score %></td> -->
      </tr>
    <% end %>

    <% end %> <!-- end if false -->


    <tr id="row-action">
      <td colspan="6">
        <p class="text-right">
          <%= link_to 'Back to Rating Tasks', rating_tasks_path, class: 'btn btn-link' %>
          <%= submit_tag 'Save', class: 'btn btn-success' %>
        </p>
      </td>
    </tr>
    </tbody>
  </table>
<% end %>
