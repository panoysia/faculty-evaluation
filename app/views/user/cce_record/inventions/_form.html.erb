<%= form_for(@invention) do |f| %>
  <%= error_messages_for(@invention) %>

  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control',
            autofocus: true, required: true,
            maxlength: Employee::Invention.get_field_limit_of(:name)
        %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :patent_no, 'Patent No.' %>
        <%= f.text_field :patent_no, class: 'form-control',
            required: true,
            maxlength: Employee::Invention.get_field_limit_of(:patent_no)
        %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :year_patented, 'Year Patented' %>
        <%= f.number_field :year_patented, class: 'form-control', required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control',
            rows: 3,
            maxlength: Employee::Invention.
                        get_field_limit_of(:description) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :patent_type, 'Patent Type' %>
        <%= f.select :patent_type,
                    Employee::Invention.patent_type_options, {},
                    class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>    
      </div>
    </div>
  </div>
<% end %>