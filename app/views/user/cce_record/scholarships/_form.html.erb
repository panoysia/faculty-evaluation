<%= form_for(@scholarship) do |f| %>
  <%= error_messages_for(@scholarship) %>

  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control',
              autofocus: true, required: true,
              maxlength: Employee::Scholarship.get_field_limit_of(:title) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :scholarship_type, 'Scholarship' %>
        <%= f.select :scholarship_type,
                    Employee::Scholarship.scholarship_type_options, {},
                    class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :degree_type, 'Degree' %>
        <%= f.select :degree_type,
                    Employee::Scholarship.degree_type_options, {},
                    class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :sponsoring_agency, 'Sponsoring Agency' %>
        <%= f.text_field :sponsoring_agency, class: 'form-control',
              required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :date_granted, 'Date Granted' %>
        <%= f.date_field :date_granted, class: 'form-control',
            required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>