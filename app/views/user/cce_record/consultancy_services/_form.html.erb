<%= form_for(@service) do |f| %>
  <%= error_messages_for(@service) %>

  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control',
            autofocus: true, required: true,
            maxlength: Employee::ConsultancyService.get_field_limit_of(:title)
        %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :level, 'Level' %>
        <%= f.select :level,
                  Employee::ConsultancyService.level_options,
                  {}, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :nature_of_participation, 'Nature of Participation' %>
        <%= f.text_field :nature_of_participation, class: 'form-control',
            maxlength: Employee::ConsultancyService.get_field_limit_of(:nature_of_participation) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :sponsoring_agency, 'Sponsoring Agency' %>
        <%= f.text_field :sponsoring_agency, class: 'form-control',
              required: true,
              maxlength: Employee::ConsultancyService.get_field_limit_of(:sponsoring_agency) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :start_at, 'Start At' %>
        <%= f.date_field :start_at, class: 'form-control',
              required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :end_at, 'End At' %>
        <%= f.date_field :end_at, class: 'form-control',
              required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>