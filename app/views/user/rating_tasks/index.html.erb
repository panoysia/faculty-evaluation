<% display_number = 0 %>
<div class="row">
  <div class="col-md-12">
    <h2 class="page-header">
      <span>Rating Tasks</span>
    </h2>
  </div>  <!-- .col-md-12 -->
</div> <!-- .row -->
<table class="table table-bordered table-striped table-master content">
  <thead>
    <tr>
      <th>#</th>
      <th>Description</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= display_number += 1 %></td>
        <td><%= link_to task.description, [:edit, task.rating.qce, task.rating] %></td>
        
        <% if task.pending? %>
          <td>
            <span class="label label-warning"><%= task.status %></span>
          </td>
        <% elsif task.completed? %>
          <td>
            <span class="label label-success"><%= task.status %></span>
          </td>
        <% elsif task.cancelled? %>
          <td><span class="label label-danger"><%= task.status %></span>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>