<div id="personal-info" class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Personal Information</h3>
  </div>  <!-- .panel-heading -->
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4">
          <div class="form-group">
            <%= label_tag :first_name, class: 'control-label' do %>
              First Name <span class="required">*</span>
            <% end %>
            <%= text_field_tag :first_name, @profile.first_name,
                  class: 'form-control',
                  autofocus: true, disabled: true,
                  maxlength: Employee.get_field_limit_of(:first_name) %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= label_tag :middle_name, 'Middle Name',
                class: 'control-label'%>
            <%= text_field_tag :middle_name, @profile.middle_name,
                class: 'form-control',
                disabled: true,
                maxlength: Employee.get_field_limit_of(:middle_name) %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= label :last_name, class: 'control-label' do %>
              Last Name <span class="required">*</span>
            <% end %>
            <%= text_field_tag :last_name, @profile.last_name,
                class: 'form-control', disabled: true,
                maxlength: Employee.get_field_limit_of(:last_name) %>
          </div>
        </div>
      </div>  <!-- .col-md-12 -->
    </div>  <!-- .row -->

    <!-- Start new row -->
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-2">
          <div class="form-group">
            <%= label_tag :name_extension, 'Name Extension', class: 'control-label' %>
            <%= text_field_tag :name_extension, @profile.name_extension,
                  class: 'form-control',
                  disabled: true%>
            <!-- <span class="help-block"><em>(7 chars max)</em></span> -->
          </div>
        </div>
        <div class="col-md-2">
          <div class="form-group">
            <%= label :gender, class: 'control-label' do %>
              Gender <span class="required">*</span>
            <% end %>
            <%= text_field_tag :gender, @profile.gender,
                  class: 'form-control',
                  disabled: true%>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= label_tag :civil_status,
                            'Civil Status', class: 'control-label' %>
            <%= text_field_tag :civil_status, @profile.civil_status,
                  class: 'form-control',
                  disabled: true %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= label_tag :birth_date, 'Date of Birth', class: 'control-label' %>
            <%= text_field_tag :birth_date, @profile.birth_date,
                disabled: true, class: 'form-control' %>
          </div>
        </div>
      </div>  <!-- .col-md-12 -->
    </div>  <!-- .row -->
    
    <!-- Start new row -->
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-2">
          <div class="form-group">
            <%= label_tag :height, "Height", class: 'control-label' %>
            <%= text_field_tag :height, @profile.height, class: 'form-control', disabled: true %>
          </div>
        </div>
        <div class="col-md-2">
          <div class="form-group">
            <%= label_tag :weight, "Weight", class: 'control-label' %>
            <%= text_field_tag :weight, @profile.weight, class: 'form-control', disabled: true %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <!-- must be a 'select' field -->
            <%= label_tag :blood_type, 'Blood Type', class: 'control-label' %>
            <%= text_field_tag :blood_type, @profile.blood_type,
                class: 'form-control', disabled: true %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= label_tag :citizenship, "Citizenship", class: 'control-label' %>
            <%= text_field_tag :citizenship, @profile.citizenship,
                class: 'form-control', disabled: true %>
          </div>
        </div>          
      </div>  <!-- .col-md-12 -->
    </div>  <!-- .row -->

    <!-- Start new row -->
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4">
          <div class="form-group">
            <%= label_tag :cellphone_no, 'Cellphone #', class: 'control-label' %>
            <%= text_field_tag :cellphone_no, @profile.cellphone_no,
                class: 'form-control', disabled: true %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <!-- must be an 'email' field -->
            <%= label_tag :email_address, 'Email Address', class: 'control-label' %>
            <%= text_field_tag :email_address, @profile.email_address,
                class: 'form-control', disabled: true %>
          </div>
        </div>
      </div>  <!-- .col-md-12 -->
    </div>  <!-- .row -->
  </div>  <!-- .panel-body -->
</div>  <!-- #personal-info .panel -->

