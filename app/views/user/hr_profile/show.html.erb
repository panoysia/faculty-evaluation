              <p><%= work_experience.company %></p>
              <!-- dates are to be right-aligned -->
              <p><%= "#{work_experience.start_at.year} - #{work_experience.end_at.year}"  %></p>
            <% end %>
          </div>  <!-- .panel-body -->
        </div>  <!-- #id-of-panel -->        
      </div>  <!-- #work-experience-info -->
    </div>  <!-- .col-md-9 -->
  </div>  <!-- .col-md-12 -->
</div>  <!-- .row -->
<!-- civil service -->
<div class="row">
  <div class="col-md-12">
