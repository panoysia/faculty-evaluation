<div class="col-md-12">
  <h4 class="page-header">Recent <span><%= link_to 'Leaves', leaves_path %></span> you filed</h4>
</div>
<div class="col-md-12">
  <table class="table table-bordered table-striped table-condensed table-master">
    <thead>
      <tr>
        <th>#</th>
        <th>Date Filed</th>
        <th>Start At</th>
        <th>End At</th>
        <th>Duration <em>(in days)</em></th>
      </tr>
    </thead>
    <tbody>
      <% @leaves.each_with_index do |leave, index| %>
        <tr>
          <td><%= index += 1 %></td>
          <td><%= date_format_readable(leave.filed_at) %></td>
          <td><%= date_format_readable(leave.start_at) %></td>
          <td><%= date_format_readable(leave.end_at) %></td>
          <td class="center"><%= leave.length %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>